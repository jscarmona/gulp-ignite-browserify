{
  "name": "gulp-ignite-browserify",
  "description": "A gulp ignite task for browserifing your javascript.",
  "version": "1.1.1",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register",
    "test:watch": "mocha --compilers js:babel-core/register -w",
    "build": "babel src -d ./",
    "lint": "eslint ./src/**/*.js",
    "prepublish": "npm run lint && npm test && npm run build;"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jscarmona/gulp-ignite-browserify.git"
  },
  "keywords": [
    "gulp",
    "starter",
    "tasks",
    "browserify",
    "javascript",
    "js"
  ],
  "author": "Javier Carmona",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jscarmona/gulp-ignite-browserify/issues"
  },
  "homepage": "https://github.com/jscarmona/gulp-ignite-browserify#readme",
  "dependencies": {
    "browserify": "13.0.0",
    "gulp": "3.9.1",
    "gulp-if": "2.0.0",
    "gulp-ignite": "1.1.2",
    "gulp-sourcemaps": "1.6.0",
    "gulp-uglify": "1.5.3",
    "vinyl-buffer": "1.0.0",
    "vinyl-source-stream": "1.1.0",
    "yargs": "4.2.0"
  },
  "devDependencies": {
    "babel-cli": "6.6.4",
    "babel-core": "6.6.5",
    "babel-preset-es2015": "6.6.0",
    "chai": "3.5.0",
    "commitizen": "2.6.1",
    "cz-conventional-changelog": "1.1.5",
    "eslint": "2.10.1",
    "eslint-config-airbnb-base": "3.0.1",
    "eslint-plugin-import": "1.8.0",
    "ghooks": "1.0.3",
    "mocha": "2.4.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-push": "npm test",
      "post-merge": "npm install",
      "post-rewrite": "npm install"
    }
  }
}
